@{
    ViewBag.Title = "Lista";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row md-2">
                <div class="col">
                    <h1>
                        Lista de Filials
                    </h1>
                </div>
                <div class="col">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="#">Home</a>
                        </li>
                        <li class="breadcrumb-item">@Html.ActionLink("Filial", "Index")</li>
                        <li class="breadcrumb-item active">Listagem</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <div class="card">
                        <div class="card-header">
                            <label>Empresa:</label>
                            @Html.DropDownList("EmpresaId", null, new { @class = "form-control select2" })
                        </div>
                        <div class="card-body">
                            <div id="listaFilial"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>


@section scripts {
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                theme: 'classic'
            });

            $(document).on('change', "#EmpresaId",
                function () {
                    var id = parseInt($("#EmpresaId")[0].value);
                    filialControle.ListagemFilial(id);
                });
        });
    </script>
}

